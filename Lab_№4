//Дана строка символов. Подсчитать, сколько раз среди символов строки встречается буква 'X'
#include <stdio.h>


int main()
{
    char c;
    int T = 0;

    c = getchar();
    while (c != EOF) {
        if (c == 'x'/* || c == 'X'*/) {
            T = T + 1;
            
        }
        c = getchar();
      
    }
    //putchar(T + '0');

    printf("Vsego %d raz\n", T);

    return 0;
    

}




//Дана строка символов. Преобразовать её, заменив все восклицательные знаки точками.
#include <stdio.h>

int main()
{
    char C;
    C = getchar();
    while (C != EOF) {
        if (C == '!') {
            putchar('.');
        } else {
            putchar(C);
        }
        C = getchar();
    }
    return 0;
}
