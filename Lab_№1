Даны числа A,B,C,D. Если A>B>C>D, то каждое число заменить полусуммой его со своими соседями,
если A<B<C<D, то числа оставить без изменения, в противном случае все числа увеличить на значение,
равное наименьшему из А,В,С,D. Вывести все числа.

#include <stdio.h>

#include <stdio.h>
 int main (){
  int a,b,c,d;
  int min;
  printf("Vvedite chislo: ");
  scanf("%d %d %d %d",&a, &b, &c, &d);
  
  if (a>b && b>c && c>d){
   a = (a+b)/2;
   b = (a+b+c)/2;
   c = (c+b+d)/2;
   d = (d+c)/2;
   
  }
  else if (a < b && b < c && c <d){
  
  }
  else {
   min = a;
   if (b<min)
    min = b;
   if (c<min)
    min = c;
   if (d<min)
    min = d;
    
   a = a+min;
   b = b+min;
   c = c+min;
   d = d+min;
   
   printf("- \n");
  }
  printf("Result: a=%d, b=%d, c=%d, d=%d", a,b,c,d);
  
  return 0;
  
 }
