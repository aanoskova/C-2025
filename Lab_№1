Даны числа A,B,C,D. Если A>B>C>D, то каждое число заменить полусуммой его со своими соседями,
если A<B<C<D, то числа оставить без изменения, в противном случае все числа увеличить на значение,
равное наименьшему из А,В,С,D. Вывести все числа.

#include <stdio.h>
int main() {
    float a, b, c, d;
    float min;
    printf("Vvedite chislo: ");
    scanf_s("%f %f %f %f", &a, &b, &c, &d);

    float a1 = a, b1 = b, c1 = c, d1 = d;

    if (a > b && b > c && c > d) {
        a1 = (a + b) / 2.0f;
        b1 = (a + b + c) / 3.0f;
        c1 = (c + b + d) / 3.0f;
        d1 = (d + c) / 2.0f;

    }
    else if (a < b && b < c && c < d) {
        printf("-\n");
    }

    else {
        min = a;
        if (b < min)
            min = b;
        if (c < min)
            min = c;
        if (d < min)
            min = d;

        a1 = a + min;
        b1 = b + min;
        c1 = c + min;
        d1 = d + min;

    }
    printf("Result: a = %2.1f, b = %2.1f, c = %2.1f, d = %2.1f", a, b, c, d);

    return 0;

}
